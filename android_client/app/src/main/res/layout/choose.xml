<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/web_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@color/colorOran"
     >

		<TextView
		        android:id="@+id/title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
	        android:gravity="center"
	        android:singleLine="true"
	        android:textColor="#FFFFFF"
	        android:textSize="20sp" />
	
	    <ImageView
	        android:id="@+id/back_btn"
	        android:layout_width="48dip"
	        android:layout_height="48dip"
	        android:layout_centerVertical="true"
	        android:background="@drawable/buttons"
	        android:src="@drawable/btn_left_normal"
	        android:padding="5dip"
	        android:textColor="#888888"
	        android:textSize="14sp" />
	</RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		<Button
			android:id="@+id/sign_btn"
			android:layout_width="match_parent"
			android:backgroundTint="@color/colorblue1"
			android:text="签到"
			android:layout_height="100dp" />
		<Button
			android:id="@+id/sign_record_btn"
			android:layout_width="match_parent"
			android:backgroundTint="@color/lightsteelblue"
			android:text="签到记录"
			android:layout_height="100dp" />
		<Button
			android:id="@+id/homework_btn"
			android:layout_width="match_parent"
			android:backgroundTint="@color/holo_blue"
			android:text="平时作业成绩记录"
			android:layout_height="100dp" />
		<Button
			android:id="@+id/exp_btn"
			android:layout_width="match_parent"
			android:backgroundTint="@color/skyblue"
			android:text="实验成绩记录"
			android:layout_height="100dp" />
		<Button
			android:id="@+id/sum_btn"
			android:layout_width="match_parent"
			android:backgroundTint="@color/mediumaquamarine"
			android:text="成绩单生成"
			android:layout_height="100dp" />

    </LinearLayout>

</LinearLayout>