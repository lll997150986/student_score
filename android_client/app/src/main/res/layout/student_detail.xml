<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >
<include layout="@layout/title" />
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	 android:background="@android:color/white">
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:stretchColumns="1">
	    <TableRow> 
			<TextView 
				android:text="学生学号："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textColor="#0000ff" 
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_studentNo"
				android:layout_width="fill_parent"
				android:textSize="16sp"
				android:layout_height="wrap_content"
			/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="当前班号："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_classNum"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="所处班级："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
				/>
			<TextView
				android:text=""
				android:id="@+id/TV_stuClass"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="学生姓名："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_stuName"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="班级排名："
				android:id="@+id/TV_name_Label"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_stuRank"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="期末总分："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_stuScore"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="评奖评优："
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_stuClassDes"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
	    <TableRow>
			<TextView
				android:text="联系电话：" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textSize="16sp"
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_stuTel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
			/>
		</TableRow>
	</TableLayout>
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"> 
		   <Button
		       android:text="返回"
		       android:id="@+id/btnReturn"
		       android:layout_width="match_parent"
		       android:layout_height="48dp"
		       android:layout_marginLeft="10dip"
		       android:layout_marginRight="10dip"
		       android:layout_marginTop="20dip"
		       android:background="#1ab394"
		       android:textColor="@color/white" />
	</LinearLayout>
  </LinearLayout>
</ScrollView>
</LinearLayout>


